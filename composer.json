{
    "name": "lmd-code/phpmdcompiler",
    "description": "PHP Markdown Compiler - compile multiple Markdown files into a single document",
    "type": "library",
    "autoload": {
        "psr-4": {
            "lmdcode\\phpmdcompiler\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "*",
        "phpcompatibility/php-compatibility": "dev-develop",
        "bartlett/php-compatinfo": "^7.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}